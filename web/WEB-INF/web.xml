<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>restoreDBServlet</servlet-name>
        <servlet-class>ctrls.restoreDBServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>restoreDBServlet</servlet-name>
        <url-pattern>/restore</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>showMainPageServlet</servlet-name>
        <servlet-class>ctrls.showMainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showMainPageServlet</servlet-name>
        <url-pattern>/showmainpage</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>addAircraftServlet</servlet-name>
        <servlet-class>ctrls.addAircraftServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addAircraftServlet</servlet-name>
        <url-pattern>/addaircraft</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>updateAircraftServlet</servlet-name>
        <servlet-class>ctrls.updateAircraftServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateAircraftServlet</servlet-name>
        <url-pattern>/updateaircraft</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteAircraftServlet</servlet-name>
        <servlet-class>ctrls.deleteAircraftServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAircraftServlet</servlet-name>
        <url-pattern>/deleteaircraft</url-pattern>
    </servlet-mapping>





</web-app>